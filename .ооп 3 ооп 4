class Cat:
    name=''
    color=''
    weight=''

cat=Cat()
cat.name='Murka'
cat.color='black and white'
cat.weight='7 кг'

class Meow:
    meow=''
meow=Meow()
meow.meow='Meow Meow Meow Meow Meow Meow Meow Meow Meow Meow Meow Meow Meow Meow Meow Meow Meow Meow Meow'

print('\n'
      f'Имя: {cat.name} \n'
      f'Цвет: {cat.color} \n'
      f'Вес: {cat.weight} \n'
      f'{meow.meow}')

